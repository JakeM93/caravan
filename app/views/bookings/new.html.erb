<div class="container text-center booking">
  <h3>Make a booking for <%= "#{@car.make} #{@car.model}" %></h3>
</div>
<div class="d-flex justify-content-center">
  <div class="box-form">
    <%= simple_form_for [@car, @booking] do |f| %>
      <%= f.input :location, placeholder: 'address', input_html: {class: 'box-form'} %>
      <div class="d-flex">
        <%= f.input :start_date, as: :date, html5: true, input_html: {class: 'box-form'} %>
        <%= f.input :end_date, as: :date, html5: true, input_html: {class: 'box-form'} %>
      </div>
      <%= f.submit class: 'btn btn-box' %>
    <% end %>
  </div>
</div>
