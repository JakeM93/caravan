<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Make a booking for <%= @car.model %></h3>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :location, placeholder: 'address' %>
          <%= f.input :start_date, placeholder: 'start-date' %>
          <%= f.input :end_date, placeholder: 'end-date' %>
          <%= f.association :car, prompt: 'Select a car', input_html: { class: 'select2' } %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
