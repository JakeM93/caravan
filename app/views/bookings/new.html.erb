<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="rounded p-3 shadow form-container-dark">
        <h3>Make a booking for <%= "#{@car.make} #{@car.model}" %></h3>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :location, placeholder: 'address', input_html: {class: 'form_placeholder'} %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <div class="d-flex justify-content-center">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
