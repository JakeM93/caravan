      <% else %>
        <li class="nav-item">
          <%= link_to "BROWSE CARS", cars_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "LOGIN", new_user_session_path, class: "nav-link" %>
