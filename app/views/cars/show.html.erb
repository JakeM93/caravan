<div class="container-fluid justify-content-center">
  <div class="row justify-content-center">
    <div class="col-xs-1 col-l-6 m-auto shadow text-center">
      <% if !@car.car_url.empty? # only add carousel if custom images have been uploaded%>
      <!-- Bootstrap Carousel -->
      <div id="carouselExampleControls" class="carousel slide mx-auto" data-ride="carousel" style="max-width:400px">
        <div class="carousel-inner">
          <% @car.car_url.each do |photo| %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: 'd-block' %>
            </div>
          <% end %>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <!-- Bootstrap Carousel END-->
    <% else %>
      <img class="car-show-image" src="https://images.pexels.com/photos/3226806/pexels-photo-3226806.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=311&w=250" alt="Mini Cooper">
    <% end %>
    </div>
    <div class="col-xs-1 col-l-6 m-auto shadow" style="min-width:300px;">
      <div class="card-body text-container-dark">
        <h5 class="card-title"><%= "#{@car.make} - #{@car.model}" %></h5>
        <p class="card-text"><%=@car.description%></p>
        <p class="card-text">Â£<%= @car.price %> per day</p>
        <p class="card-text"><%= @car.seats %> seats</p>
        <p class="card-text"><small class="text-muted">Listing created on <%=@car.created_at%></small></p>
        <div class="btn-group" role="group">
        <a href="<%=new_car_booking_path(@car)%>"><i class="far fa-calendar-check book-btn"></i></a>
          
          <% if user_signed_in? && current_user.id == @car.user_id %>
            <%= link_to 'Edit', edit_car_path(@car), class: 'btn btn-warning' %>
            <%= link_to 'Detete', car_path(@car), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this car!?' } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <script>
    carousel = document.querySelector('#carouselExampleControls')
    carousel_image = carousel.querySelector('.carousel-inner .carousel-item')
    if(carousel_image){
      carousel_image.classList.add('active')
    }
  </script>
</div>
</div>
