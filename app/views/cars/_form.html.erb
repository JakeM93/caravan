<%= simple_form_for(car) do |f| %>
  <div class="d-flex justify-content-between">
    <div class="mx-1 flex-fill">
      <%= f.input :make, placeholder: 'Vauxhall', input_html: {class: 'form_placeholder'} %>
    </div>
    <div class="mx-1 flex-fill">
      <%= f.input :model, placeholder: 'Corsa', input_html: {class: 'form_placeholder'} %>
    </div>
  </div>
  <div class="mx-1">
    <%= f.input :location, placeholder: 'PostCode / Zip Code', input_html: {class: 'form_placeholder'} %>
  </div>
  <div class="d-flex justify-content-between">
    <div class="mx-1 flex-fill">
      <%= f.input :reg_number, placeholder: 'DF03-TTT', input_html: {class: 'form_placeholder'} %>
    </div>
    <div class="mx-1 flex-fill">
      <%= f.input :price, placeholder: '250', input_html: {class: 'form_placeholder'} %>
    </div>
  </div>
  <div class="mx-1">
    <%= f.input :seats, placeholder: '5', input_html: {class: 'form_placeholder'} %>
  </div>
  <div class="d-flex justify-content-between">
    <div class="mx-3 flex-fill">
      <%= f.input :fuel_type, as: :radio_buttons, collection: ["Petrol", "Diesel", "Gas"] %>
    </div>
    <div class="mx-3 flex-fill">
      <%= f.input :transmission, as: :radio_buttons, collection: ["Manual", "Automatic"] %>
    </div>
  </div>
  <div class="mx-1">
    <%= f.input :description, placeholder: 'A small family car, ideal for city breaks...', input_html: {class: 'form_placeholder'} %>
  </div>
  <div class="mx-1">
    <%= f.input :photo, label: "Car Photos", as: :file, input_html: { multiple: true } %>
  </div>
  <div class="d-flex justify-content-center">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
